{
    "navigationFallback": {
        "rewrite": "/index.html"
    },
    "routes": [
        {
            "route": "/admin/*",
            "allowedRoles": ["authenticated"]
        },
        {
            "route": "/api/*",
            "allowedRoles": ["anonymous"]
        },
        {
            "route": "/api/admin/*",
            "allowedRoles": ["authenticated"]
        },
        {
            "route": "/api/admin/*",
            "redirect": "/.auth/login/aad",
            "allowedRoles": ["anonymous"]
        },
        {
            "route": "/login",
            "redirect": "/.auth/login/aad"
        },
        {
            "route": "/logout",
            "redirect": "/.auth/logout"
        },
        {
            "route": "/.auth/login/twitter",
            "statusCode": 404
        },
        {
            "route": "/.auth/login/github",
            "statusCode": 404
        }
    ]
}